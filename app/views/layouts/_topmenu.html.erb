<div id="main-search">
<input type="text" placeholder="Search.." id="search-bar" />
<%= image_tag 'mag-glasses.svg', height: '50px', alt: '', id: 'mag-glasses' %>
</div>
<div id='top-right-menu'>
    <ul>
    <% if current_user %>
        <li><%= link_to "My Profile", user_path(id: session[:user_id]) %></li>
        <li><%= link_to "Log Out", sessions_destroy_path, method: 'delete' %></li>
    <% else %>
        <li><%= link_to "Register", new_user_path %></li>
        <li><%= link_to "Log In", sessions_new_path %></li>
    <% end %>
    <li><a href="/"><%= image_tag 'home-logo.svg', height: '40px', alt: 'Home', id: 'home-logo' %></a></li>
    </ul>
</div>