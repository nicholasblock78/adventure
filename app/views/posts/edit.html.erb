<h3>Editing..</h3>

<h1>Edit article</h1>
 
<%= form_tag category_post_path(@post), method: "put" do %>
  <label>Post title:</label><br>
  <%= text_field_tag :title, @post.title %><br>

  <label>Post description</label><br>
  <%= text_area_tag :body, @post.body %><br>

  <%= submit_tag "Submit Post" %>
<% end %>